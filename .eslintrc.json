{   
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest": true
      },     
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "eslint:recommended",
        "next"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
          "experimentalObjectRestSpread": true,
          "jsx": true
        }
      },
    "plugins": [
        "react"
    ],
    
    "rules": {
        "no-console": "off",
        "react/jsx-props-no-spreading":0,
        "global-require": 0 ,
        "no-loop-func": 0,
        "react/prop-types": 0,
        "react/react-in-jsx-scope": 0,
        "react/jsx-uses-react": 0,
        "no-await-in-loop":0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": 0,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
